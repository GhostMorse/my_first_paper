% arxiv.sty - Style for arxiv papers
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{arxiv}[2023/01/01 arxiv style]

\RequirePackage{hyperref}
\RequirePackage{xcolor}
\RequirePackage{fancyhdr}
\RequirePackage{geometry}

% Page geometry
\geometry{
  a4paper,
  left=1in,
  right=1in,
  top=1in,
  bottom=1in
}

% Colors
\definecolor{mydarkblue}{rgb}{0,0.08,0.45}

% Hyperref setup
\hypersetup{
  colorlinks=true,
  linkcolor=mydarkblue,
  citecolor=mydarkblue,
  urlcolor=mydarkblue,
  breaklinks=true
}

% Title formatting
\renewcommand{\maketitle}{%
  \begin{center}
    {\LARGE\bfseries\@title\par}
    \vspace{1em}
    {\large\@author\par}
    \vspace{0.5em}
    {\@date\par}
  \end{center}
  \vspace{1em}
}

% Short title for headers
\newcommand{\shorttitle}[1]{\gdef\@shorttitle{#1}}
\newcommand{\@shorttitle}{}

% Keywords command
\providecommand{\keywords}[1]{\par\noindent\textbf{Keywords:} #1}

% Abstract environment
\renewenvironment{abstract}{%
  \begin{center}
    \bfseries Abstract
  \end{center}
  \begin{quotation}
}{%
  \end{quotation}
}

% Author blocks - simplified version
\newcommand{\And}{\par\vspace{0.5em}}

\newcommand{\AND}{\par\vspace{1em}}

\endinput
